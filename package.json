{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "dotenvx run -- turbo run build",
    "build:app": "dotenvx run -- sh -c 'turbo run build --filter \"$BUNDLER\"... \"$@\"' -- ",
    "build:ui": "dotenvx run -- turbo run build --filter ui-storybook",
    "dev": "dotenvx run -- turbo run dev",
    "dev:app": "dotenvx run -- sh -c 'turbo run dev --filter \"$BUNDLER\"'",
    "dev:ui": "dotenvx run -- sh -c 'turbo run dev --filter ui-storybook'",
    "preview": "dotenvx run -- turbo run preview",
    "preview:app": "dotenvx run -- sh -c 'turbo run preview --filter \"$BUNDLER\"'",
    "preview:ui": "dotenvx run -- turbo run preview --filter ui-storybook",
    "lint": "dotenvx run -- turbo run lint",
    "lint:app": "dotenvx run -- sh -c 'turbo run lint --filter \"$BUNDLER\"... \"$@\"' -- ",
    "lint:ui": "dotenvx run -- turbo run lint --filter ui-storybook...",
    "test": "dotenvx run -- turbo run test",
    "test:watch": "dotenvx run -- turbo run test:watch",
    "check:dependencies": "dotenvx run -- syncpack lint",
    "check:type": "dotenvx run -- turbo run check:type",
    "check:format": "dotenvx run -- prettier . --check",
    "clear:cache": "pnpm cache delete && rm -rf pnpm-lock.yaml && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clear:output": "turbo run clear:output",
    "format:code": "dotenvx run -- prettier . --write",
    "format:dependencies": "dotenvx run -- pnpm dlx sherif@latest -f",
    "quality-checks": "dotenvx run -- pnpm check:dependencies && pnpm turbo check:type lint test",
    "deploy:aws": "dotenvx run -- ./infra/aws/scripts/deploy.sh",
    "deploy:netlify": "dotenvx run -- sh -c 'pnpm build:app && pnpm run --filter @repo/infra-netlify deploy'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@dotenvx/dotenvx": "^1.16.1",
    "husky": "^9.1.7",
    "lint-staged": "16.0.0",
    "prettier": "^3.5.3",
    "syncpack": "13.0.4",
    "turbo": "2.5.3",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.8.0",
  "name": "turborepo-react-starter"
}
