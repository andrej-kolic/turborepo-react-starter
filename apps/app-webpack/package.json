{
  "name": "app-webpack",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--loader ts-node/esm' NODE_ENV=development webpack serve --mode development --config config/webpack.config.ts",
    "build": "NODE_OPTIONS='--loader ts-node/esm' NODE_ENV=production webpack --mode production --config config/webpack.config.ts",
    "preview": "NODE_OPTIONS='--loader ts-node/esm' NODE_ENV=production webpack serve --mode production --config config/webpack.config.ts",
    "lint": "eslint .",
    "compile": "tsc",
    "check:type": "tsc --noEmit",
    "clear:output": "rm -rf ./dist"
  },
  "dependencies": {
    "@repo/app-core": "workspace:*",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@repo/dev-tools": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.7.4",
    "@types/react": "19.1.5",
    "@types/react-dom": "19.1.5",
    "@types/webpack-dev-server": "^4.7.2",
    "copy-webpack-plugin": "13.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "webpack": "^5.95.0",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "^5.1.0"
  }
}
