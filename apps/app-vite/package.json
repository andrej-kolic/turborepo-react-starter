{
  "name": "app-vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:staging": "vite --mode staging",
    "dev:production": "vite --mode production",
    "__dev:test": "NODE_ENV=development vite",
    "build": "tsc && vite build",
    "build:staging": "tsc && vite build --mode staging",
    "__build:test": "NODE_ENV=development tsc && NODE_ENV=development vite build",
    "build-verbose": "tsc && DEBUG=vite-tsconfig-paths vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "__preview": "dotenvx run -f ../../packages/app-core/.env -- vite preview",

    "test:type": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/app-core": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
