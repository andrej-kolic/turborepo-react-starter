{
  "name": "app-webpack",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "__dev": "NODE_OPTIONS='--loader ts-node/esm' NODE_ENV=development webpack serve --mode development --config config/webpack.config.ts",
    "dev": "BUILD_ENVIRONMENT=development pnpm __dev",
    "dev:staging": "BUILD_ENVIRONMENT=staging pnpm __dev",
    "dev:production": "BUILD_ENVIRONMENT=production pnpm __dev",
    "__build": "NODE_OPTIONS='--loader ts-node/esm' NODE_ENV=production webpack --mode production --config config/webpack.config.ts",
    "build": "BUILD_ENVIRONMENT=production pnpm __build",
    "build:staging": "BUILD_ENVIRONMENT=staging pnpm __build",
    "preview": "NODE_OPTIONS='--loader ts-node/esm' NODE_ENV=production webpack serve --mode production --config config/webpack.config.ts",
    "test": "echo 'Add test script here'",
    "lint": "eslint .",
    "compile": "tsc",
    "test:type": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/app-core": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/webpack-dev-server": "^4.7.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "dotenv-flow": "^4.1.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  }
}
