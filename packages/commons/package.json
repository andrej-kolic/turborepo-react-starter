{
  "name": "@repo/commons",
  "version": "0.0.0",
  "type": "module",
  "_main": "./src/index.ts",
  "_types": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "bundle": "tsup-node",
    "bundle:watch": "tsup-node --watch",
    "type:gen": "tsc --emitDeclarationOnly",
    "type:gen:watch": "tsc --emitDeclarationOnly --watch",
    "clear:output": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "pnpm clear:output && run-p bundle type:gen",
    "dev": "run-p bundle:watch type:gen:watch",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "check:type": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "2.5.8",
    "@types/jest": "30.0.0",
    "@types/node": "24.6.2",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "jest": "30.2.0",
    "npm-run-all": "4.1.5",
    "ts-jest": "29.4.4",
    "tsup": "8.5.0"
  }
}
