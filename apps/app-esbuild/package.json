{
  "name": "app-esbuild",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "type": "module",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "copy-html-dev": "mkdir -p dev && cp ./src/index.html ./dev",
    "copy-html-build": "mkdir -p dist && cp ./src/index.html ./dist",
    "build": "pnpm copy-html-build && BUILD_ENVIRONMENT=${BUILD_ENVIRONMENT:-production} node ./config/build.js",
    "build:staging": "BUILD_ENVIRONMENT=staging pnpm build",
    "dev": "pnpm copy-html-dev && BUILD_ENVIRONMENT=${BUILD_ENVIRONMENT:-development} node ./config/dev.js",
    "dev:staging": "BUILD_ENVIRONMENT=staging pnpm dev",
    "dev:production": "BUILD_ENVIRONMENT=production pnpm dev",
    "preview": "serve ./dist",
    "__test:type": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/app-core": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "dotenv-flow": "^4.1.0",
    "esbuild": "0.24.0",
    "serve": "^14.2.4"
  },
  "_devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "vite": "^4.4.5",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
