{
  "name": "app-esbuild",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "type": "module",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "_copy-html-dev": "mkdir -p dev && cp ./src/index.html ./dev",
    "_copy-html-build": "mkdir -p dist && cp ./src/index.html ./dist",
    "_bundle_build": "TS_NODE_PROJECT=tsconfig.node.json node --loader ts-node/esm ./config/build.config.ts",
    "_bundle_dev": "TS_NODE_PROJECT=tsconfig.node.json node --loader ts-node/esm ./config/dev.config.ts",
    "build": "pnpm _copy-html-build && pnpm _bundle_build",
    "dev": "pnpm _copy-html-dev && pnpm _bundle_dev",
    "lint": "eslint .",
    "preview": "serve ./dist",
    "check:type": "tsc --noEmit",
    "clear:output": "rm -rf ./dist ./dev"
  },
  "dependencies": {
    "@repo/app-core": "workspace:*",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/dev-tools": "workspace:*",
    "@types/node": "24.6.2",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "esbuild": "0.25.10",
    "serve": "^14.2.4",
    "ts-node": "^10.9.2"
  }
}
