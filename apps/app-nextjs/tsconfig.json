{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": "build",
    "paths": {
      // "~/*": ["./src/*", "../../packages/app-core/src/*", "../../packages/ui/src/*"]
      "~app-core/*": ["../../packages/app-core/src/*"],
      "~ui/*": ["../../packages/ui/src/*"],
    },
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
