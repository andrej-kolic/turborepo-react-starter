{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],

  "globalEnv": ["BUNDLER", "BUILD_ENVIRONMENT", "NODE_ENV"],
  "globalPassThroughEnv": ["AWS_SECRET_KEY", "GITHUB_TOKEN"],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build-storybook": {
      "dependsOn": ["^build"]
    },
    "build-storybook-docs": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:type": {
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false
    }
  }
}
